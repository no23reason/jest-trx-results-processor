{
  "name": "jest-trx-results-processor",
  "description": "Jest results processor for exporting into TRX files for Visual Studio",
  "author": "Dan Homola",
  "user": "no23reason",
  "version": "0.0.0-semantic-release",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": {
    "url": "https://github.com/no23reason/jest-trx-results-processor",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/no23reason/jest-trx-results-processor/issues"
  },
  "keywords": [
    "jest",
    "jestjs",
    "jest-cli",
    "trx"
  ],
  "scripts": {
    "prepublish": "npm run build",
    "build": "tsc",
    "test": "jest --coverage",
    "test:ci": "npm run test:tslint && npm test",
    "test:tdd": "jest --watch",
    "test:tslint": "tslint --project .",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "dependencies": {
    "uuid": "~3.0.0",
    "xmlbuilder": "~8.2.2"
  },
  "devDependencies": {
    "@types/jest": "^16.0.0",
    "@types/node": "^6.0.45",
    "@types/uuid": "^2.0.29",
    "@types/xml2js": "^0.0.28",
    "@types/xmlbuilder": "^0.0.28",
    "commitizen": "^2.9.3",
    "cz-conventional-changelog": "^1.2.0",
    "jest": "^18.1.0",
    "semantic-release": "^6.3.2",
    "tslint": "~4.3.0",
    "typescript": "~2.1.4",
    "xml2js": "^0.4.17"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/lib/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$"
  }
}